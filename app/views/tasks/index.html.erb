<h1>Task Manager (<%= @tasks.count %>)</h1>
<!-- <a class="btn btn-primary" href="tasks/new">Create task</a> -->
<%= link_to "New task", new_task_path, class: "btn btn-primary" %>
<hr>
<% @tasks.each do |t| %>
<div>
  <div>
  <%= link_to t.description, task_path(t) %>
    <% if t.completed %>
    <span class="label label-primary">Done</span>
    <% end %>
  </div>
  <%= link_to "Edit", edit_task_path(t), class: "btn btn-warning" %>
  <%= link_to "Delete", task_path(t), method: :delete , class: "btn btn-danger" %>
</div>
<% end %>

